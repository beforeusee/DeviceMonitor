<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".DeviceDetails"
        tools:showIn="@layout/activity_device_details"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="[Description]"
                        android:id="@+id/Description"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="[Manufacturer]"
                        android:id="@+id/Manufacturer"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_below="@id/Description"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="[Model]"
                        android:id="@+id/Model"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_alignTop="@id/Manufacturer"
                        android:layout_toRightOf="@id/Manufacturer"
                        android:layout_toEndOf="@id/Manufacturer"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="[Serial]"
                        android:id="@+id/Serial"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_below="@id/Manufacturer"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="[Device Id]"
                        android:id="@+id/DeviceId"
                        android:textColor="#666666"
                        android:textSize="18sp"
                        android:layout_toRightOf="@id/Description"
                        android:layout_toEndOf="@id/Description"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <!--Current Status-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="25dp"
                    android:layout_height="50dp"
                    android:background="@color/statusGreen"
                    android:id="@+id/DeviceStatusIndicator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Current Device Status"
                    android:id="@+id/DeviceStatusTextView"
                    android:textColor="#888"
                    android:textSize="10sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/DeviceStatusText"
                    android:layout_alignStart="@+id/DeviceStatusText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="[Device Status]"
                    android:id="@+id/DeviceStatusText"
                    android:layout_toRightOf="@id/DeviceStatusIndicator"
                    android:layout_toEndOf="@id/DeviceStatusIndicator"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#333"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="[00:00]"
                    android:id="@+id/DeviceStatusTime"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:textColor="#333" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:id="@+id/OeeContainerLayout">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/OeeLayout">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="OEE"
                            android:id="@+id/OEETextView"
                            android:layout_gravity="center|top"
                            android:textColor="#888"
                            android:textSize="14sp"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="[OEE]"
                            android:id="@+id/OEE"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="30sp"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/AvailabilityLayout">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Availability"
                            android:id="@+id/AvailabilityTextView"
                            android:layout_gravity="center|top"
                            android:textColor="#888"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="[A]"
                            android:id="@+id/AvailabilityVariable"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="30sp"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/PerformanceLayout">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Performance"
                            android:id="@+id/PerformanceTextView"
                            android:layout_gravity="center|top"
                            android:textColor="#888"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="[P]"
                            android:id="@+id/Performance"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="30sp"/>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#ccc"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20sp"
                android:paddingBottom="20sp">

                <!--Active-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:id="@+id/ActiveTimesLayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentBottom="true">

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:id="@+id/ActiveProgressBar"
                            android:progress="50"
                            android:max="100"
                            android:indeterminate="false"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/progress_active_style"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="[Ac]"
                        android:id="@+id/ActivePercentage"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Active"
                        android:id="@+id/textView12"
                        android:textColor="#333"
                        android:textIsSelectable="false"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="false"
                        android:layout_marginLeft="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="[00:00]"
                        android:id="@+id/ActiveTime"
                        android:textColor="#888"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView12"
                        android:layout_toEndOf="@+id/textView12" />

                </RelativeLayout>

                <!--Idle-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:id="@+id/IdleTimesLayout"
                    android:layout_marginTop="20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentBottom="true">

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:id="@+id/IdleProgressBar"
                            android:progress="30"
                            android:max="100"
                            android:indeterminate="false"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/progress_idle_style"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="[I]"
                        android:id="@+id/IdlePercentage"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Idle"
                        android:id="@+id/textView13"
                        android:textColor="#333"
                        android:textIsSelectable="false"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="false"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="[00:00]"
                        android:id="@+id/IdleTime"
                        android:textColor="#888"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView13"
                        android:layout_toEndOf="@+id/textView13" />

                </RelativeLayout>

                <!--Alert-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/AlertTimesLayout"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentBottom="true">

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:id="@+id/AlertProgressBar"
                            android:progress="30"
                            android:max="100"
                            android:indeterminate="false"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/progress_alert_style"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="[Al]"
                        android:id="@+id/AlertPercentage"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Alert"
                        android:id="@+id/textView14"
                        android:textColor="#333"
                        android:textIsSelectable="false"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="false"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="[00:00]"
                        android:id="@+id/AlertTime"
                        android:textColor="#888"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView14" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#ccc"/>

            <!--Availability(Power)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/PowerStatusLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ControllerAvailabilityLayout"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Availability"
                            android:id="@+id/textView3"
                            android:layout_gravity="center_vertical"
                            android:layout_centerHorizontal="true"
                            android:textColor="#888"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView3"
                            android:layout_alignParentStart="true"
                            android:paddingTop="10sp"
                            android:id="@+id/linearLayout2">

                            <!--Power On-->
                            <FrameLayout
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:id="@+id/PowerOn"
                                android:background="@drawable/details_item_border"
                                android:layout_marginRight="5sp"
                                android:layout_marginLeft="5sp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/PowerOnBackground">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/on_02"
                                        android:tint="#888"
                                        android:id="@+id/PowerOnImage" />

                                </FrameLayout>

                            </FrameLayout>

                            <!--Power Off-->
                            <FrameLayout
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:id="@+id/PowerOff"
                                android:background="@drawable/details_item_border"
                                android:layout_marginLeft="5sp"
                                android:layout_marginRight="5sp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#ff0000"
                                    android:id="@+id/PowerOffBackground">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/off_02"
                                        android:tint="#fff"
                                        android:layout_margin="5sp"
                                        android:id="@+id/PowerOffImage" />

                                </FrameLayout>

                            </FrameLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="UNAVAILABLE"
                            android:id="@+id/AvailabilityText"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/statusRed"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="#ccc"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EmergencyStopLayout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Emergency Stop"
                            android:id="@+id/textView17"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#888"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/EmergencyStopImage"
                            android:src="@drawable/estop_01"
                            android:layout_below="@+id/textView17"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:tint="@color/statusRed" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="TRIGGERED"
                            android:id="@+id/EmergencyStopText"
                            android:layout_below="@+id/EmergencyStopImage"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/statusRed"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <!--System Status-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/SystemStatusLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="System Status"
                    android:id="@+id/textView15"
                    android:textColor="#888"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fault"
                    android:id="@+id/SystemStatusText"
                    android:textColor="@color/statusRed"
                    android:layout_marginTop="5sp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="[System Message]"
                    android:id="@+id/SystemMessageText"
                    android:layout_marginTop="5sp"
                    android:background="@color/statusRed"
                    android:textColor="#fff"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <!--Execution Mode-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Execution Mode"
                    android:id="@+id/textView20"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#888"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="STOPPED"
                    android:id="@+id/ExecutionModeText"
                    android:layout_below="@+id/textView20"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/statusRed"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <!--Current Program-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Current Program"
                    android:id="@+id/textView22"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#888"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="TEST.NC"
                    android:id="@+id/CurrentProgramText"
                    android:layout_below="@id/textView22"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/foreground_normal_color"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <!--Controller Mode-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="40dp"
                android:id="@+id/ControllerModeLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Controller Mode"
                    android:id="@+id/textView2"
                    android:textColor="#888"
                    android:textSize="10sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp">

                    <!--Auto-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ControllerMode_Auto"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_horizontal"
                            android:tint="@color/statusGreen"
                            android:src="@drawable/auto_02"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="AUTO"
                            android:id="@+id/textView4"
                            android:layout_alignParentBottom="false"
                            android:layout_below="@+id/ControllerMode_Auto"
                            android:layout_centerHorizontal="true"
                            android:textColor="#888"
                            android:textSize="10sp"
                            android:layout_marginTop="-5dp" />

                    </RelativeLayout>

                    <!--MDI-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ControllerMode_MDI"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_horizontal"
                            android:tint="#888"
                            android:src="@drawable/mdi_02"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="MDI"
                            android:id="@+id/textView5"
                            android:layout_alignParentBottom="false"
                            android:layout_below="@+id/ControllerMode_MDI"
                            android:layout_centerHorizontal="true"
                            android:textColor="#888"
                            android:textSize="10sp"
                            android:layout_marginTop="-5dp" />

                    </RelativeLayout>

                    <!--Single Block-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ControllerMode_SBLK"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_horizontal"
                            android:tint="#888"
                            android:src="@drawable/single_block_02"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="SBLK"
                            android:id="@+id/textView6"
                            android:layout_alignParentBottom="false"
                            android:layout_below="@+id/ControllerMode_SBLK"
                            android:layout_centerHorizontal="true"
                            android:textColor="#888"
                            android:textSize="10sp"
                            android:layout_marginTop="-5dp" />

                    </RelativeLayout>

                    <!--Manual-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ControllerMode_Manaul"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_horizontal"
                            android:tint="#888"
                            android:src="@drawable/jog_02"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="MANUAL"
                            android:id="@+id/textView7"
                            android:layout_alignParentBottom="false"
                            android:layout_below="@+id/ControllerMode_Manaul"
                            android:layout_centerHorizontal="true"
                            android:textColor="#888"
                            android:textSize="10sp"
                            android:layout_marginTop="-5dp" />

                    </RelativeLayout>

                    <!--Edit-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ControllerMode_Edit"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_horizontal"
                            android:tint="#888"
                            android:src="@drawable/edit_02"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="EDIT"
                            android:id="@+id/textView8"
                            android:layout_alignParentBottom="false"
                            android:layout_below="@+id/ControllerMode_Edit"
                            android:layout_centerHorizontal="true"
                            android:textColor="#888"
                            android:textSize="10sp"
                            android:layout_marginTop="-5dp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>