<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhengxiaohu.devicemonitor.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/ApiServerRLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewApiServer"
            android:text="Api Server"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Api Server]"
            android:textSize="18sp"
            android:id="@+id/ApiServer"
            android:gravity="center_horizontal"
            android:layout_below="@id/textViewApiServer"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/UpdateIntervalRLayout"
        android:layout_below="@id/ApiServerRLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUpdateInterval"
            android:text="Update Interval"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Update Interval]"
            android:textSize="18sp"
            android:id="@+id/UpdateInterval"
            android:gravity="center_horizontal"
            android:layout_below="@id/textViewUpdateInterval"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/SaveButtonRLayout"
        android:layout_below="@id/UpdateIntervalRLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Save"
            android:text="保存"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
